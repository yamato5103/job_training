package object_dir;

public class Hero {

		String name;
		int hp;
		public void sleep() {
			this.hp=100;
			System.out.println(this.name);
			}
		public void sit(int sec) {
			this.hp+=sec;
			System.out.println(this.name);
			System.out.println(sec);
			}
		public void slip() {
			this.hp=5;
			System.out.println(this.name);
			System.out.println("5 ダメージ");
			
	}
		public void run() {
			System.out.println(this.name);
			System.out.println("GAME OVER");
			System.out.println(this.hp);
		}

}
